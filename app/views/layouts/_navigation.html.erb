<ul class='nav'>
  <li>
    <%= link_to 'Postit!', root_path, :class => 'brand' %>
  </li>
</ul>
<div class='btn-group nav_item'>
  <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do  %>
    Categories <span class='caret'></span>
  <% end %>
  <ul class='dropdown-menu'>
    <% Category.all.each do |category| %>
      <li>
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end %>
    <% if logged_in? && current_user.admin? %>
      <li class='divider'></li>
        <li>
          <%= link_to (new_category_path)  do %>
            <i class='icon-plus'></i>
            New Category
          <% end %>
        </li>
    <% end %>
  </ul>
</div>
<% if logged_in? %>
  <div class='nav_item'>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small'  %>
  </div>
  <div class='btn-group nav_item'>
  <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do  %>
      <%= current_user.username %> <span class='caret'></span>
  <% end %>
  <ul class='dropdown-menu'>
  <!-- just done in a single line the above with a do could have been used -->
  <li><%= link_to '<i class="icon-pencil"></i>Edit Profile'.html_safe, edit_user_path(current_user) %></li>
  <li><%= link_to '<i class="icon-user"></i>View Profile'.html_safe, user_path(current_user) %></li>
    <li><%= link_to '<i class="icon-circle-arrow-left"></i>Logout'.html_safe, logout_path %></li>
    </ul>
  </div>
<% else # logged out %> 
  <div class='nav_item'>
    <%= link_to 'Register', register_path, class: 'btn btn-success btn-small'  %>
  </div>
  <div class='nav_item'>
    <%= link_to 'Log in', login_path, class: 'btn btn-small' %>
  </div>
<% end %>
