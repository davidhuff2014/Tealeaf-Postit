<% if @post.errors.any? %>
  <div class='alert alert-error'>
  <h4>There were some errors:</h4>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class='well'>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'input-with-feedback' %>
  <br/>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <br/>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 5, class: 'input-with-feedback' %>
  <br/>
  <%# = f.submit 'Create Post', class: 'btn btn-primary' %>
    <%= f.button :submit => nil, class: 'btn btn-primary' %>
<% end %>
</div>
