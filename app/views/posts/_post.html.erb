<div class='row'>
  <div class='span8 well'>
    <%= render post.categories %>
    <h4><%= link_to post.title, fix_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p>
    <%# = binding.pry %>
    <% #TODO DO NOT LEAVE THE FOLLOWING LINE IN PRODUCTION %>
      <span class='quiet'>posted by</span> <%= post.creator.present? ? post.creator.username : 'No creator defined!' %>
      <small>at <%= post.created_at.to_formatted_s(:long) %></small>
    </p>
    <small>
      <span>
        <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        (<%= link_to 'edit', edit_post_path(post) %>)
      </span>
    </small>
  </div>
</div>